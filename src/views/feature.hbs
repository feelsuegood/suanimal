 <div class="container mt-5">
        <h1 class="page__title">Features of {{featuredAnimal.name}}</h1>
        
        <div class="row">
            <div class="col-md-6">
                <a href="{{photoData.url}}" target="_blank">
                    <img src="{{photoData.image}}" alt="{{photoData.title}}" class="img-fluid">
                </a>
            </div>
            <div class="col-md-6">
                <h2>Threat Status: {{threatData}}</h2>
                
                <h2>Taxonomy</h2>
                <p>Kingdom: {{featuredAnimal.taxonomy.kingdom}}</p>
                <p>Phylum: {{featuredAnimal.taxonomy.phylum}}</p>
                <p>Class: {{featuredAnimal.taxonomy.class}}</p>
                <p>Order: {{featuredAnimal.taxonomy.order}}</p>
                <p>Family: {{featuredAnimal.taxonomy.family}}</p>
                <p>Genus: {{featuredAnimal.taxonomy.genus}}</p>
                <p>Scientific name: {{featuredAnimal.taxonomy.scientific_name}}</p>
            </div>
        </div>

        <h2>Locations</h2>
        <p>Location: {{featuredAnimal.locations}}</p>

        <h2>Characteristics</h2>
        <p>Habitat: {{featuredAnimal.characteristics.habitat}}</p>
        <p>Predators: {{featuredAnimal.characteristics.predators}}</p>
        <p>Lifespan: {{featuredAnimal.characteristics.lifespan}}</p>
        <p>Weight: {{featuredAnimal.characteristics.weight}}</p>
        <p>Height: {{featuredAnimal.characteristics.height}}</p>

        <h2>Related News</h2>
        {{#each newsData.news}}
        <a href="{{this.Url}}">
            <h4>{{this.Title}}</h4>
        </a>
        <p><small>{{this.PublishedOn}}</small></p>
        <p>{{this.Description}}</p>
        {{/each}}
    </div>